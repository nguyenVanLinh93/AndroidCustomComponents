<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coloredView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nguyenlinh.androidcustomcomponents.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.nguyenlinh.androidcustomcomponents.ColoredView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            coloredView:desired_size="300"
            coloredView:background_color="@color/blue"
            coloredView:color_second="@color/pink"
            android:onClick="changeColor"/>
        <com.example.nguyenlinh.androidcustomcomponents.ColoredView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            coloredView:desired_size="300"
            coloredView:background_color="@color/green"
            coloredView:color_second="@color/white"
            android:onClick="changeColor"/>
    </LinearLayout>

    <com.example.nguyenlinh.androidcustomcomponents.ColoredView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="changeColor"/>
</LinearLayout>
